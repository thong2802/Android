<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="160dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/search_custom">

    <ImageView
        android:id="@+id/popular_image"
        android:layout_width="120dp"
        android:layout_height="116dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/asiafood2"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/popular_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/acme"
        android:text="TextView"
        android:textColor="#333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/popular_image"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/popular_image"
        app:layout_constraintTop_toTopOf="@+id/popular_image" />

</androidx.constraintlayout.widget.ConstraintLayout>